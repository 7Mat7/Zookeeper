
<%= form_for @contact, url: home_index_path, remote: true do |f| %>
    <div class="row flex-md-row">
      <div class="col-md-6">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <%= f.label :nom %></br>
          <%= f.text_field  :name, required: true, class: "contact-form-text-area" %></br>
      </div>
      <div class="col-md-6">
          <%= f.label :email %></br>
          <%= f.text_field :email, required: true, class: "contact-form-text-area" %></br>
      </div>
    </div>

    <div class="row flex-md-row">
      <div class="col-md-6">
        <%= f.label :de %>
        <%= f.date_field :start_date, as: :date, html5: true, class: "contact-form-text-area date" %></br>
      </div>
      <div class="col-md-6">
        <%= f.label :Ã€ %>
        <%= f.date_field :end_date, as: :date, html5: true, class:"contact-form-text-area date" %></br>
      </div>

      <div class="padded">
        <%= f.label :message %></br>
        <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "contact-form-text-area",
                          placeholder: "Votre message"%></br>


      <div class= "hidden">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
      </div>

      <%= f.submit 'Send Message', class: 'btn btn-primary' %>
    </div>
    </div>
  <% end %>
  <div class="col-md-6" id="flash-message">
    <%= render 'flash' %>
  </div>
